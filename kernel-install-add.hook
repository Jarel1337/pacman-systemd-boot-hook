[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = usr/lib/modules/*/vmlinuz

[Action]
Depends = dracut
Description = Installing kernel and initrd to /boot...
Exec = /bin/sh -c 'for i in $(ls /lib/modules); do kernel-install add $i /lib/modules/$i/vmlinuz; done'
When = PostTransaction
